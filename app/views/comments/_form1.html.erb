
<%= form_for([@post, @post.comments.build]) do |f| %>
	<p>
	    <%= f.label :title %><br />
	    <%= f.text_field :title, size: "30" %>
  	</p>
	<p>
		<%= f.label 'Your name' %><br />
		<%= f.text_field :commenter, size: "30" %>
	</p>
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body, size: "30x8" %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>