<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div><%= f.label :name %><br />
  <%= f.text_field :name, size: "30", :autofocus => true %></div><br />

  <div><%= f.label :email %><br />
  <%= f.email_field :email, size: "30" %></div><br />

  <div><%= f.label :password %><br />
  <%= f.password_field :password, size: "30" %></div><br />

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, size: "30" %></div>
  <br>
  <div><%= f.submit "Sign up", class: "pure-button pure-button-secondary" %></div>
<% end %>

<%= render "devise/shared/links" %>
		
